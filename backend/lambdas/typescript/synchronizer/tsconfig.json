{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "./src/**/*.ts",
    "./prisma/**/*.ts", 
    "lambda.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}

